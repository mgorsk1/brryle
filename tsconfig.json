{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "outDir": "./build/js",
    "rootDir": "./src/",
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": ["./src/index.tsx", "./src/index.html", "./src/App.tsx", "./src/constants.ts", "./src/types.ts", "./src/components/**/*.ts", "./src/components/**/*.tsx", "./src/services/**/*.ts"],
  "exclude": ["node_modules", "./build"]
}
